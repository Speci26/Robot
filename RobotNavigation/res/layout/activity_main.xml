<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <ScrollView
        android:id="@+id/scrollMe"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="fill_horizontal"
        android:scrollbars="vertical" >

        <TextView
            android:id="@+id/textLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:scrollbars="vertical" />
    </ScrollView>

    <ScrollView
        android:id="@+id/myScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/TestButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.38"
                android:onClick="buttonTest_onClick"
                android:text="Test" />

            <Button
                android:id="@+id/button7"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:onClick="buttonTest2_onClick"
                android:text="Test2" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_weight="0.04"
                android:columnCount="1" >

                <Button
                    android:id="@+id/ButtonMinus"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_gravity="start|top"
                    android:layout_row="4"
                    android:onClick="buttonMinus_onClick"
                    android:text="-" />

                <Button
                    android:id="@+id/ButtonPlus"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_column="0"
                    android:layout_gravity="end|top"
                    android:layout_row="4"
                    android:onClick="buttonPlus_onClick"
                    android:text="+" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_row="2"
                    android:text="Robot Bar"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.38"
                android:columnCount="2" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_weight="0.38"
                    android:text="Working Demos"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Button
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="left|top"
                    android:layout_row="2"
                    android:onClick="buttonDriveAndRead_onClick"
                    android:text="driveAndRead" />

                <Button
                    android:id="@+id/button9"
                    android:layout_column="0"
                    android:layout_gravity="left|top"
                    android:layout_row="1"
                    android:onClick="buttonMoveToGoalN3_onClick"
                    android:text="moveToGoalN3" />

                <Button
                    android:id="@+id/button10"
                    android:layout_gravity="left"
                    android:onClick="buttonEightZero_onClick"
                    android:text="8_0" />

                <Button
                    android:id="@+id/button11"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:layout_row="1"
                    android:onClick="buttonEightOne_onClick"
                    android:text="8_1" />

                <Button
                    android:id="@+id/button12"
                    android:layout_column="1"
                    android:layout_gravity="right|center_vertical"
                    android:layout_row="1"
                    android:onClick="buttonEightTwo_onClick"
                    android:text="8_2" />

                <Button
                    android:id="@+id/button13"
                    android:layout_column="1"
                    android:layout_gravity="left|center_vertical"
                    android:layout_row="2"
                    android:onClick="buttonMLineDemo_onClick"
                    android:text="m-line Demo" />
                <Button
                    android:id="@+id/button14"
                    android:layout_column="1"
                    android:layout_gravity="left|center_vertical"
                    android:layout_row="3"
                    android:onClick="buttonmoveToGoalN2_onClick"
                    android:text="moveToGoalN2" />

            </GridLayout>

            <GridLayout
                android:id="@+id/Test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.38" >

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_weight="0.38"
                    android:text="Development"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Button
                    android:id="@+id/button4"
                    android:layout_gravity="left"
                    android:text="getBlob"
                    android:onClick="buttonGetBlob_onClick" />

            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.04"
                android:columnCount="2" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_weight="0.38"
                    android:text="Kalibrierung"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Button
                    android:id="@+id/Button01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:layout_gravity="left"
                    android:layout_weight="0.04"
                    android:onClick="buttonOneMeterDriveByVel_onClick"
                    android:text="1m by vel" />
                
                <Button
                    android:id="@+id/buttonSensor"
                    android:layout_width="wrap_content"
                    android:layout_height="41dp"
                    android:layout_column="0"
                    android:layout_gravity="left|top"
                    android:layout_row="1"
                    android:onClick="buttonSensor_onClick"
                    android:text="Read Sensors" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="left|top"
                    android:layout_row="1"
                    android:layout_weight="0.04"
                    android:onClick="button360Deg_onClick"
                    android:text="360Â°" />

                <Button
                    android:id="@+id/button2"
                    android:layout_column="1"
                    android:layout_gravity="right|top"
                    android:layout_row="1"
                    android:onClick="buttonFindSensorIDs_onClick"
                    android:text="SensorIDs" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="right|top"
                    android:layout_row="0"
                    android:layout_weight="0.04"
                    android:onClick="buttonOneMeter_onClick"
                    android:text="1m by dist" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="0.38"
                    android:layout_row="1"
               		 android:onClick="button3_onClick"
                    android:text="Homography" />
                
            </GridLayout>
            

    <org.opencv.android.JavaCameraView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center|top"
        android:id="@+id/color_blob_detection_activity_surface_view" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
