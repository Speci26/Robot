<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <ScrollView
        android:id="@+id/scrollMe"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="fill_horizontal"
        android:scrollbars="vertical" >

        <TextView
            android:id="@+id/textLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:scrollbars="vertical" />
    </ScrollView>

    <ScrollView
        android:id="@+id/myScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/Button04"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:onClick="buttonTest_onClick"
                android:text="@string/test1" />

            <Button
                android:id="@+id/Button03"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:onClick="buttonTest2_onClick"
                android:text="@string/test2" />

            <Button
                android:id="@+id/TestButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:onClick="buttonTest3_onClick"
                android:text="@string/test3" />

            <Button
                android:id="@+id/button7"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:onClick="buttonTest4_onClick"
                android:text="@string/test4" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_weight="0.04"
                android:columnCount="1" >

                <Button
                    android:id="@+id/ButtonMinus"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_gravity="start|top"
                    android:layout_row="4"
                    android:onClick="buttonMinus_onClick"
                    android:text="@string/minus" />

                <Button
                    android:id="@+id/ButtonPlus"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_column="0"
                    android:layout_gravity="end|top"
                    android:layout_row="4"
                    android:onClick="buttonPlus_onClick"
                    android:text="@string/plus" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_row="2"
                    android:text="@string/bar"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.38"
                android:columnCount="4" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:text="@string/demos"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Button
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="start|top"
                    android:layout_row="2"
                    android:onClick="buttonDriveAndRead_onClick"
                    android:text="@string/dAR" />

                <Button
                    android:id="@+id/button9"
                    android:layout_column="0"
                    android:layout_gravity="start|top"
                    android:layout_row="1"
                    android:onClick="buttonMoveToGoalN3_onClick"
                    android:text="@string/mTGN" />

                <Button
                    android:id="@+id/button10"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:layout_row="1"
                    android:onClick="buttonEightZero_onClick"
                    android:text="8_0" />

                <Button
                    android:id="@+id/button11"
                    android:layout_column="2"
                    android:layout_gravity="center"
                    android:layout_row="1"
                    android:onClick="buttonEightOne_onClick"
                    android:text="8_1" />

                <Button
                    android:id="@+id/button12"
                    android:layout_column="3"
                    android:layout_gravity="end|center_vertical"
                    android:layout_row="1"
                    android:onClick="buttonEightTwo_onClick"
                    android:text="8_2" />

                <Button
                    android:id="@+id/button13"
                    android:layout_column="1"
                    android:layout_gravity="start|center_vertical"
                    android:layout_row="2"
                    android:onClick="buttonMLineDemo_onClick"
                    android:text="m-line Demo" />

                <Button
                    android:id="@+id/button17"
                    android:layout_column="2"
                    android:layout_gravity="start"
                    android:layout_row="2"
                    android:onClick="ButtonFindAndDeliverBall"
                    android:text="FindADeliverBall" />
                
                <Button
                    android:id="@+id/button14"
                    android:layout_column="1"
                    android:layout_gravity="start|center_vertical"
                    android:layout_row="3"
                    android:onClick="buttonmoveToGoalN2_onClick"
                    android:text="moveToGoalN2" />

            </GridLayout>

            <GridLayout
                android:id="@+id/Test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.38" >

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:text="Development"
                    android:textAppearance="?android:attr/textAppearanceMedium" />


            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.04"
                android:columnCount="4" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:text="Kalibrierung"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Button
                    android:id="@+id/Button01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:layout_gravity="start"
                    android:onClick="buttonOneMeterDriveByVel_onClick"
                    android:text="1m by vel" />

                <Button
                    android:id="@+id/ButtonOneMeterByVelSlow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="3"
                    android:layout_row="0"
                    android:onClick="buttonOneMeterDriveByVelSlow_onClick"
                    android:text="1m by vel slow" />
                
                <Button
                    android:id="@+id/buttonSensor"
                    android:layout_width="wrap_content"
                    android:layout_height="41dp"
                    android:layout_column="0"
                    android:layout_gravity="start|top"
                    android:layout_row="1"
                    android:onClick="buttonSensor_onClick"
                    android:text="Read Sensors" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="start|top"
                    android:layout_row="1"
                    android:onClick="button360Deg_onClick"
                    android:text="360° by dist" />

                <Button
                    android:id="@+id/Button02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:onClick="button360DegByVel_onClick"
                    android:text="360° by vel" />

                <Button
                    android:id="@+id/button2"
                    android:layout_column="3"
                    android:layout_gravity="end|top"
                    android:layout_row="1"
                    android:onClick="buttonFindSensorIDs_onClick"
                    android:text="SensorIDs" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="end|top"
                    android:layout_row="0"
                    android:layout_weight="0.04"
                    android:onClick="buttonOneMeter_onClick"
                    android:text="1m by dist" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="0.38"
                    android:layout_row="1"
               		android:onClick="button3_onClick"
                    android:text="Homography" />

                <Button
                    android:id="@+id/button15"
                    android:layout_gravity="left"
                    android:layout_row="2"
                    android:onClick="ButtonEmptyBrain"
                    android:text="emptyBrain" />
                
            </GridLayout>
            

    <org.opencv.android.JavaCameraView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center|top"
        android:id="@+id/color_blob_detection_activity_surface_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.38"
        android:orientation="vertical" >       

       <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
             android:text="100"
            android:ems="10" >
        </EditText>

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
             android:text="100"
            android:ems="10" >
        </EditText>
        
       <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="45"
            android:ems="10" >
		</EditText>
		<Button
           android:id="@+id/button16"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
            android:onClick="buttonReadTargetPoint"
            android:text="submit target position" />
    </LinearLayout>

        </LinearLayout>
       
    </ScrollView>

</LinearLayout>
