<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <ScrollView
        android:id="@+id/scrollMe"
        android:layout_width="match_parent"
        android:layout_height="174dp"
        android:layout_gravity="fill_horizontal" >
        android:scrollbars="vertical"

        <TextView
            android:id="@+id/textLog"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="left"
            android:lines="80"
            android:maxLines="80"
            android:scrollbars="vertical" />
    </ScrollView>

    <ScrollView
        android:id="@+id/myScrollView"
        android:layout_width="match_parent"
        android:layout_height="398dp"
        android:layout_gravity="fill_horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/TestButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.38"
                android:onClick="buttonTest_onClick"
                android:text="Test" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_weight="0.04"
                android:columnCount="1" >

                <Button
                    android:id="@+id/ButtonMinus"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_gravity="start|top"
                    android:layout_row="4"
                    android:onClick="buttonMinus_onClick"
                    android:text="-" />

                <Button
                    android:id="@+id/ButtonPlus"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_column="0"
                    android:layout_gravity="end|top"
                    android:layout_row="4"
                    android:onClick="buttonPlus_onClick"
                    android:text="+" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_row="2"
                    android:text="Robot Bar"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.38"
                android:columnCount="2" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_weight="0.38"
                    android:text="Working Demos"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="right|top"
                    android:layout_row="1"
                    android:layout_weight="2.80"
                    android:onClick="buttonBug1_onClick"
                    android:text="Bug1" />

                <Button
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="left|top"
                    android:layout_row="1"
                    android:onClick="buttonDriveAndRead_onClick"
                    android:text="driveAndRead" />

            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_weight="0.04"
                android:layout_height="wrap_content"
                android:columnCount="2" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_gravity="top|center_horizontal"
                    android:text="Kalibrierung"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Button
                    android:id="@+id/buttonSensor"
                    android:layout_width="wrap_content"
                    android:layout_height="41dp"
                    android:layout_column="0"
                    android:layout_gravity="left|top"
                    android:layout_row="1"
                    android:onClick="buttonSensor_onClick"
                    android:text="Read Sensors" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="left|top"
                    android:layout_row="1"
                    android:layout_weight="0.04"
                    android:onClick="button360Deg_onClick"
                    android:text="360Â°" />

                <Button
                    android:id="@+id/button2"
                    android:layout_column="1"
                    android:layout_gravity="right|top"
                    android:layout_row="1"
                    android:onClick="buttonFindSensorIDs_onClick"
                    android:text="SensorIDs" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="right|top"
                    android:layout_row="0"
                    android:layout_weight="0.04"
                    android:onClick="buttonOneMeter_onClick"
                    android:text="1m" />

            </GridLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
